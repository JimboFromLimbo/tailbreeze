{
  "name": "@tailbreeze/styles",
  "packageManager": "yarn@3.2.3",
  "main": "dist",
  "types": "dist/components",
  "scripts": {
    "build:watch": "yarn clean && yarn generate:styles:watch | yarn generate:scss:types:watch",
    "build": "yarn clean && yarn generate:styles && yarn generate:scss:types",
    "clean": "rm -rf dist",
    "generate:scss:types": "yarn tcm src --outDir dist/",
    "generate:scss:types:watch": "yarn tcm src --outDir dist/ --watch",
    "generate:styles": "postcss src/**/*.css --base src --dir dist",
    "generate:styles:watch": "postcss src/**/*.css --base src --dir dist --watch"
  },
  "devDependencies": {
    "typed-scss-modules": "^7.0.0"
  },
  "dependencies": {
    "cssnano": "^5.1.13",
    "node-sass": "^7.0.3",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "postcss-scss": "^4.0.5",
    "stylelint": "^14.12.0",
    "stylelint-config-standard": "^28.0.0",
    "typed-css-modules": "^0.7.2"
  }
}
